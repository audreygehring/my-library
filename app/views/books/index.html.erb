<div class="small-centered columns">
  <br>
  <h1> My Books </h1>

  <% @books.order(:title).each do |book| %>
  <% author = Author.find(book.author_id) %>
  <strong><%= link_to book.title, book_path(book) %></strong> by <%= author.first_name %> <%= author.last_name %><br>
  <% end %>
  <br>
  <div id="action-buttons">
    <%= link_to "Add a Book", new_book_path, class: "button hollow" %>
    <%= link_to "Back", root_path, class: "button hollow" %><br>
  </div>
  <br>
</div>
