<!DOCTYPE html>
<html>
  <head>
    <title>MyLibrary</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/topbar' %>
    <% flash.each do |key, value| %>
      <div class="flash text-center flash-<%= key %>">
        <%= value %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
